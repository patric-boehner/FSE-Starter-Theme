{
  "name": "pb-starter-theme",
  "version": "1.0.0",
  "description": "Build tools for PB Starter WordPress theme",
  "private": true,
  "scripts": {
    "dev": "npm run build:dev && npm run watch",
    "build": "npm run clean && node build.js --production",
    "build:dev": "npm run clean && node build.js",
    "watch": "concurrently -n css,js,svg,assets -c blue,yellow,magenta,green npm:watch:*",
    "watch:css": "onchange \"src/css/**/*.css\" -- node build.js css",
    "watch:js": "onchange \"src/js/**/*.js\" -- node build.js js",
    "watch:svg": "onchange \"src/svg/**/*.svg\" -- node build.js svg",
    "watch:assets": "onchange \"src/fonts/**/*\" \"src/images/**/*\" -- node build.js assets",
    "clean": "rm -rf build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.27.2",
    "lightningcss": "^1.28.0",
    "onchange": "^7.1.0",
    "svgo": "^3.2.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead"
  ]
}
